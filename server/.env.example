# Server Configuration
PORT=3000
NODE_ENV=development
CLIENT_URL=http://localhost:5173

# Database - SQLite (file-based, no external service needed)
# Leave empty to use default: ./database.sqlite
DATABASE_PATH=

# Redis
REDIS_URL=redis://localhost:6379

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Email (for OTP - using mock for development)
EMAIL_FROM=noreply@powersense.com
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# SMS (for OTP - using mock for development)
SMS_ENABLED=false
SMS_API_KEY=your-sms-api-key
SMS_SENDER_ID=PWRSNS
